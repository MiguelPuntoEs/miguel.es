---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Lost in the void" description="This page doesn't exist.">
  <main class="mx-auto px-4 py-24 flex flex-col items-center gap-6">
    <p style="font-size: 15vw;" class="leading-none font-bold tracking-tighter text-gray-200 dark:text-gray-800 select-none">404</p>
    <div class="text-center space-y-2">
      <h1 class="text-xl font-semibold">You've ventured off the map</h1>
      <p class="text-sm text-gray-500 dark:text-gray-400">This page got lost somewhere between Madrid and the internet.</p>
    </div>
    <div class="flex gap-4 mt-2">
      <a href="/" class="px-4 py-2 text-sm font-medium bg-gray-900 text-white dark:bg-white dark:text-gray-900 rounded-lg hover:opacity-80 transition-opacity">Take me home</a>
      <a href="/resources" class="px-4 py-2 text-sm font-medium border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">Browse resources</a>
    </div>
  </main>
</Layout>
