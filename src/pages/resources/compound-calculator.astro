---
import Layout from "../../layouts/Layout.astro";
import Calculator from "../../components/CompoundCalculator.jsx";
---

<Layout
  title="Compound Interest Calculator"
  description="Explore how your savings grow over time with interest and regular contributions."
>
  <main class="min-h-screen px-3 py-10 sm:px-6">
    <section class="mx-auto max-w-6xl space-y-6">
      <header class="space-y-2 text-center">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-indigo-600">
          Tools
        </p>
        <h1 class="text-3xl font-semibold tracking-tight text-slate-900">
          Compound Interest Calculator
        </h1>
        <p class="mx-auto max-w-2xl text-sm text-slate-600">
          Explore how your savings grow over time with interest and regular
          contributions. Adjust the sliders and inputs to match your plan.
        </p>
      </header>

      <Calculator client:only="react" />
    </section>
  </main>
</Layout>