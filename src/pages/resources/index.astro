---
import ResourceEntry from "../../components/ResourceEntry.astro";
import Layout from "../../layouts/Layout.astro";

const courses = await Astro.glob('../courses/*.md');
const courseEntries = courses.map(course => ({
  title: course.frontmatter.title,
  description: course.frontmatter.description,
  url: course.url
}));
---

<Layout title="Miguel GonzÃ¡lez | Resources" description="Personal resources">
  <section class="max-w-3xl mx-auto px-4">
    <h1 class="text-2xl font-semibold mb-4">Resources</h1>
    
    <h2 class="text-lg font-semibold mb-3 mt-6">Teaching</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-6 mb-8">
      {courseEntries.map(course => (
        <ResourceEntry
          title={course.title}
          description={course.description}
          url={course.url}
        />
      ))}
      <ResourceEntry
        title="Correcting rubrics"
        description="Rubrics to correct assingments and exams (Spanish)."
        url="/resources/rubrics"
      />
    </div>

    <h2 class="text-lg font-semibold mb-3">Tools & Calculators</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-6 mb-8">
      <ResourceEntry
        title="Compound Interest Calculator"
        description="Interactive calculator for compound interest with periodic contributions."
        url="/resources/compound-calculator"
      />
      <ResourceEntry
        title="PPP Calculator"
        description="Convert amounts based on Purchasing Power Parity across countries."
        url="/resources/ppp-calculator"
      />
      <ResourceEntry
        title="Inflation Calculator"
        description="Adjust amounts for inflation using actual OECD CPI data."
        url="/resources/inflation-calculator"
      />
      <ResourceEntry
        title="Financial mathematics"
        description="Formulas and concepts used in financial mathematics (Spanish)."
        url="/resources/financial-mathematics"
      />
    </div>

    <h2 class="text-lg font-semibold mb-3">Reference Materials</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-6">
      <ResourceEntry
        title="Interesting APIs"
        description="Collection of useful APIs for development and data analysis."
        url="/resources/apis"
      />
      <ResourceEntry
        title="Economic Information Sources"
        description="Reliable sources for economic data and financial information."
        url="/resources/economic-sources"
      />
      <ResourceEntry
        title="Statistical Errors"
        description="Common statistical errors and how to avoid them."
        url="/resources/errors"
      />
      <ResourceEntry
        title="LLM Resources"
        description="Resources for Large Language Models and AI development."
        url="/resources/llm"
      />
      <ResourceEntry
        title="Machine Learning Resources"
        description="Tools, libraries, and guides for machine learning."
        url="/resources/machine-learning"
      />
      <ResourceEntry
        title="Python Resources"
        description="Python libraries, frameworks, and development tools."
        url="/resources/python"
      />
    </div>
  </section>
</Layout>
