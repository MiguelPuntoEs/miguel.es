---
import "../styles/global.css";
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
const { title, description, latex } = frontmatter;
---

<Layout {title} {description}>
  {
    latex && (
      <link
        slot="head"
        href="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css"
        rel="stylesheet"
      />
    )
  }
  <main
    class="prose prose-sm prose-p:mb-1 prose-ul:my-1 prose-ol:my-1 prose-headings:font-semibold prose-h1:text-2xl prose-a:text-blue-600 prose-a:hover:text-blue-500 max-w-3xl mx-auto px-4"
  >
    <article class="mt-8">
      <h1>{title}</h1>
      <slot />
    </article>
  </main>
</Layout>
