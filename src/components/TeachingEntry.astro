---
export interface Props {
  logo: any;
  courseName: string;
  university: string;
  dateRange: string;
  url?: string;
}

const { logo: Logo, courseName, university, dateRange, url } = Astro.props;
---

<div class="flex gap-4">
  <Logo
    height={50}
    width={50}
    class="bg-slate-50/80 p-2 rounded-lg border border-slate-200/40"
  />
  <div class="flex-1">
    <p class="font-semibold text-sm">
      {url ? <a href={url}>{courseName}</a> : courseName}
    </p>
    <p class="text-xs">{university}</p>
    <p class="text-xs text-gray-500">{dateRange}</p>
  </div>
</div>
