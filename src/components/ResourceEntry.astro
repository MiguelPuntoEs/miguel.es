---
export interface Props {
  title: string;
  description?: string;
  url?: string;
}

const { title, description, url } = Astro.props;
---

<div class="flex flex-col gap-1">
  {
    url ? (
      <a
        href={url}
        class="font-semibold text-sm text-slate-800 hover:text-slate-600 transition-colors"
      >
        {title}
      </a>
    ) : (
      <h3 class="font-semibold text-sm text-slate-800">{title}</h3>
    )
  }
  {
    description && (
      <p class="text-xs text-slate-600 leading-relaxed">{description}</p>
    )
  }
</div>
